@model DemoCore.Application.ViewModels.PeopleVM

@{
    ViewData["Title"] = "Register new Candidate";
}
<section class="bg-transparent text-body mb-auto mt-3">

    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <form asp-action="Create">
            <div class="form-horizontal">
                <hr />
                <div class="row">
                    @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
                    <vc:summary />
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Name" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Email" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Skype" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Skype" class="form-control" />
                            <span asp-validation-for="Skype" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Phone" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col">
                        <label asp-for="City" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col">
                        <label asp-for="State" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="LinkedIn" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="LinkedIn" class="form-control" />
                            <span asp-validation-for="LinkedIn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Portfolio" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Portfolio" class="form-control" />
                            <span asp-validation-for="Portfolio" class="text-danger"></span>
                        </div>
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                        @if (User.IsInRole("Manager"))
                        {
                            <a asp-action="Index" class="btn btn-info">Back to List</a>
                        }
                        @if (User.IsInRole("Client"))
                        {
                            <a asp-action="Index" asp-controller="Home" class="btn btn-info">Back to Home</a>
                        }

                    </div>
                </div>
            </div>
        </form>

    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


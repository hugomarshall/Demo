@{
    ViewData["Title"] = "Welcome";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container">
        <img class="img-fluid mb-5 d-block mx-auto" src="~/node_modules/startbootstrap-freelancer/img/profile.png" alt="">
        <h1 class="text-uppercase mb-0">DemoCore Project</h1>
        <hr class="star-light">
        <h2 class="font-weight-light mb-0">Web Developer - SOLID and Clean Code - Run anywhere</h2>
    </div>
</header>

<section class="portfolio" id="portfolio">
    <div class="container">
        <div class="container-fluid">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img src="~/images/banner1.svg" alt="ASP.NET" class="img-fluid" />
                        <div class="carousel-caption" role="option">
                            <p>
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/banner2.svg" alt="Visual Studio" class="img-fluid" />
                        <div class="carousel-caption" role="option">
                            <p>
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/banner3.svg" alt="Package Management" class="img-fluid" />
                        <div class="carousel-caption" role="option">
                            <p>
                            </p>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="fa fa-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="fa fa-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <h3>Design</h3>
                <ul>
                    <li>Full architecture with responsibility separation concerns, SOLID and Clean Code</li>
                    <li>DDD Concepts - Layers and Domain Model Pattern</li>
                    <li>CQRS - Command Query Responsibility Segregation</li>
                    <li>Event Sourcing</li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-4">
                <h3>Technologies</h3>
                <ul>
                    <li>.NET Core 2.2</li>
                    <li>ASP.NET MVC Core 2.2</li>
                    <li>ASP.NET WebAPI Core 2.2</li>
                    <li>ASP.NET Identity Core 2.2</li>
                    <li>EF Core 2.2</li>
                    <li>AutoMapper</li>
                    <li>FluentValidator</li>
                    <li>MediatR</li>
                    <li>Swagger UI</li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-4">
                <h3>RoadMap for 2.0</h3>
                <ul>
                    <li>Booking application with Domain Model Pattern, CQRS and ES concepts</li>
                    <li>ASP.NET Identity working throught WebAPI services</li>
                    <li>New front-end</li>
                    <li>Different ways to read and write data.</li>
                    <li>Unit Tests</li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-4">
                <h3>Run</h3>
                <ul>
                    <li>Run anywhere</li>
                    <li>Scale on the cloud</li>
                </ul>
            </div>
        </div>
    </div>
</section>



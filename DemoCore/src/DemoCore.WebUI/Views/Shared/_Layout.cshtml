<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DemoCore Project</title>

    <environment names="Development">

        <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

        <link href="~/node_modules/startbootstrap-freelancer/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
        <link href="~/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
        <link href="~/node_modules/startbootstrap-freelancer/vendor/magnific-popup/magnific-popup.css" rel="stylesheet" />
        <link href="~/node_modules/startbootstrap-freelancer/css/freelancer.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/node_modules/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
        <link href="~/node_modules/startbootstrap-freelancer/vendor/magnific-popup/magnific-popup.min.css" rel="stylesheet" />
        <link href="~/node_modules/startbootstrap-freelancer/css/freelancer.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body id="page-top">
    <nav id="mainNav" class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DemoCore Project</a>
        <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fa fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Manage
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-area="" asp-controller="BestWorkTime" asp-action="Index" class="dropdown-item">BestWorkTime</a>
                            <a asp-area="" asp-controller="WorkAvailability" asp-action="Index" class="dropdown-item">WorkAvailability</a>
                            <div class="dropdown-divider"></div>
                            <a asp-area="" asp-controller="Developer" asp-action="Index" class="dropdown-item">Developer</a>
                            <a asp-area="" asp-controller="Designer" asp-action="Index" class="dropdown-item">Designer</a>
                            <div class="dropdown-divider"></div>
                            <a asp-area="" asp-controller="People" asp-action="Index" class="dropdown-item">People</a>
                        </div>
                    </li>

                }
                @if (User.IsInRole("Client"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Candidate" asp-action="IndexAsync">Candidate <span class="sr-only">(current)</span></a>
                    </li>
                }

            </ul>

            @await (Html.PartialAsync("_LoginPartial"))
        </div>
    </nav>

    @RenderBody()

    <footer class="footer text-center">
        <div class="container">
            <p>DemoCore Project - Version 1.0</p>
            <p>Developed by - <a href="mailto:hugo@sharpnet.com.br" target="_blank">Hugo Terra</a> - This is a demo project based an open-source project <a href="https://github.com/EduardoPires/EquinoxProject" target="_blank">Equinox Project</a></p>
        </div>
    </footer>

    <div class="copyright py-4 text-center text-white">
        <div class="container">
            <small>
                Copyright &copy; Sharpnet 2018
                @{
                    if (DateTime.Now.Year > 2018)
                    {
                        @: -
                        @DateTime.Now.Year.ToString();
                    }

                }
            </small>
        </div>
    </div>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-to-top d-lg-none position-fixed ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>



    <environment names="Development">
        <script src="~/node_modules/jquery/dist/jquery.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/node_modules/startbootstrap-freelancer/vendor/jquery-easing/jquery.easing.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/vendor/magnific-popup/jquery.magnific-popup.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/js/jqBootstrapValidation.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/js/contact_me.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/node_modules/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.bundle.min.js"
                asp-fallback-src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/node_modules/startbootstrap-freelancer/vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/js/jqBootstrapValidation.min.js"></script>
        <script src="~/node_modules/startbootstrap-freelancer/js/contact_me.min.js"></script>

        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
